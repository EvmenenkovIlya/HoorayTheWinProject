<Window x:Class="HoorayTheWinProject_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoorayTheWinProject_"
        mc:Ignorable="d"
        Title="HoorayTheWinProject" Height="600" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Users and Tests">
                <Grid Background="AntiqueWhite">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <Label Content="List of Groups:" Margin="20, 0, 0, 0"/>
                    <ListBox Name='ListBoxGroups' Margin="20, 30, 20, 80" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    <TextBox Name="TextBoxNewGroupName" VerticalAlignment="Bottom" Height="25" Margin="20, 0, 195, 45"/>
                    <Button Name="ButtonCreateNewGroup" Content="Create a new Group" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150" Height="25" Margin="0, 0, 20, 45"/>
                    <TextBox Name="TextBoxChageGroupName" VerticalAlignment="Bottom" Height="25" Margin="20, 0, 195, 10"/>
                    <Button Name="ButtonChangeGroupName" Content="Change Name" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150" Height="25" Margin="0, 0, 20, 10"/>
                    <Label Grid.Column='1' Content="Choose Group fot Test:" Margin="20, 0, 0, 0"/>
                    <ListBox Grid.Column='1' Name='ListBoxCheckBoxOfGroupForTest' Margin="20, 30, 20, 60" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    <Label Grid.Column='1' Content="Choose Test:" Margin="20, 0, 20, 40" VerticalAlignment="Bottom"/>
                    <ComboBox Grid.Column='1' Name='ComboBoxChooseTestForStart'  Margin="20, 0, 20, 20" VerticalAlignment="Bottom" />
                    <Button Grid.Column="1" Grid.Row="1" Content="Start New Test" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" Margin="20, 0, 20, 20"/>
                    <Label Grid.Row='1' Content="List of Users:" Margin="20, 0, 0, 0"/>
                    <Button Grid.Row='1' Name="ButtonChangeUserName" Content="Change User Name" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="130" Height="25" Margin="0, 0, 50, 45"/>
                    <Button Grid.Row='1' Name="ButtonAddToGroup" Content="Add To Group" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="130" Height="25" Margin="0, 0, 50, 10"/>
                    <Button Grid.Row='1' Name="ButtonDeletFromGroup" Content="❌" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="25" Height="25" Margin="0, 0, 20, 10"/>
                    <TextBox Grid.Row='1' Name="TextBoxChageUserName" VerticalAlignment="Bottom"  Height="25"  Margin="20, 0, 200, 45"/>
                    <ComboBox Grid.Row='1' Name='ComboBoxChooseGroup' Margin="20, 0, 200, 10" VerticalAlignment="Bottom" />
                    <ListBox Grid.Row='1' Name='ListBoxListOfUsers' Margin="20, 30, 20, 80" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Questions">
                <Grid Background="AntiqueWhite">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>

                </Grid>
            </TabItem>
            <TabItem Header="FOR TEST">
                <Grid Background="AntiqueWhite">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
