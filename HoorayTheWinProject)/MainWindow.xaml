<Window x:Class="HoorayTheWinProject_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoorayTheWinProject_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Users and Tests">
                <Grid Background="#FFE5E5E5">
                    <TreeView x:Name="treeView1" Margin="10,21,542,34">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Path=Nodes}">
                                <TextBlock Text="{Binding Name}" />
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    <Button Content="Update UserList" HorizontalAlignment="Left" Margin="78,377,0,0" VerticalAlignment="Top" Width="106"/>
                    <Button Content="Start / Finish Test" HorizontalAlignment="Center" Margin="0,244,0,0" VerticalAlignment="Top" Height="44" Width="106"/>
                    <Button x:Name="ButtonCreateAReport" Content="Button" HorizontalAlignment="Left" Margin="359,332,0,0" VerticalAlignment="Top" Click="ButtonCreateAReport_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Question" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="ComboBoxTypeOfQuestion" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Width="169"/>
                    <Button x:Name="ButtonCreateAQuestion" Content="Create a question" HorizontalAlignment="Left" Margin="88,52,0,0" VerticalAlignment="Top" Click="ButtonCreateAQuestion_Click" Width="118"/>
                    <TextBox x:Name="TextBoxTypeOfQuestion" HorizontalAlignment="Left" Margin="23,91,0,0" TextWrapping="Wrap" Text="Text of a question" VerticalAlignment="Top" Width="248" Height="100"/>
                    <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="23,228,0,0" VerticalAlignment="Top"/>
                    <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="23,257,0,0" VerticalAlignment="Top"/>
                    <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="23,318,0,0" VerticalAlignment="Top"/>
                    <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="23,287,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.511,0.493"/>
                    <TextBlock HorizontalAlignment="Left" Margin="108,202,0,0" TextWrapping="Wrap" Text="Variants " VerticalAlignment="Top" Width="70"/>
                    <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="265,230,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="265,289,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="265,259,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="265,320,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Left" Margin="124,228,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="124,257,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="124,286,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <TextBox HorizontalAlignment="Left" Margin="124,314,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
