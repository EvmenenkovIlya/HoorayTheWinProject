<Window x:Class="HoorayTheWinProject_.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoorayTheWinProject_"
        mc:Ignorable="d"
        Title="HoorayTheWinProject" Height="700" Width="900" ResizeMode="CanResize" >
    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Users and Tests">
                <Grid Background="AntiqueWhite">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <Label Content="List of Groups:" Margin="20, 0, 0, 0"/>
                    <ListBox Name='ListBoxGroups' Margin="20, 30, 20, 80" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="ListBoxGroups_SelectionChanged"/>
                    <TextBox Name="TextBoxNewGroupName" VerticalAlignment="Bottom" Height="25" Margin="20, 0, 195, 45"/>
                    <Button Name="ButtonCreateNewGroup" Content="Create a new Group" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150" Height="25" Margin="0, 0, 20, 45"/>
                    <TextBox Name="TextBoxChageGroupName" VerticalAlignment="Bottom" Height="25" Margin="20, 0, 195, 10"/>
                    <Button Name="ButtonChangeGroupName" Content="Change Name" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150" Height="25" Margin="0, 0, 20, 10"/>
                    <Label Grid.Column='1' Content="Choose Group fot Test:" Margin="20, 0, 0, 0"/>
                    <ListBox Grid.Column='1' Name='ListBoxCheckBoxOfGroupForTest' Margin="20, 30, 20, 60" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    <Label Grid.Column='1' Content="Choose Test:" Margin="20, 0, 20, 40" VerticalAlignment="Bottom"/>
                    <ComboBox Grid.Column='1' Name='ComboBoxChooseTestForStart'  Margin="20, 0, 20, 20" VerticalAlignment="Bottom" />
                    <Button Grid.Column="1" Grid.Row="1" Content="Start New Test" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" Margin="20, 0, 20, 20"/>
                    <Label Grid.Row='1' Content="List of Users:" Margin="20, 0, 0, 0"/>
                    <Button Grid.Row='1' Name="ButtonChangeUserName" Content="Change User Name" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="130" Height="25" Margin="0, 0, 50, 45"/>
                    <Button Grid.Row='1' Name="ButtonAddToGroup" Content="Add To Group" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="130" Height="25" Margin="0, 0, 50, 10"/>
                    <Button Grid.Row='1' Name="ButtonDeletFromGroup" Content="❌" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="25" Height="25" Margin="0, 0, 20, 10"/>
                    <TextBox Grid.Row='1' Name="TextBoxChageUserName" VerticalAlignment="Bottom"  Height="25"  Margin="20, 0, 200, 45"/>
                    <ComboBox Grid.Row='1' Name='ComboBoxChooseGroup' Margin="20, 0, 200, 10" VerticalAlignment="Bottom" />
                    <ListBox Grid.Row='1' Name='ListBoxListOfUsers' Margin="20, 30, 20, 80" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Questions">
                <Grid Background="AntiqueWhite">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="237*"/>
                        <RowDefinition Height="317*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="LabelChooseType" Content="Choose type of question" Height="30" Margin="20,15,208,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16"/>
                    <ComboBox x:Name="ComboBoxTypeOfQuestion" Height="20" Margin="199,20,20,0" VerticalAlignment="Top" RenderTransformOrigin="0.549,0.151"/>
                    <TextBox x:Name="TextBoxTextOfQuestion" Margin="20,54,20,20" TextWrapping="Wrap" Text="TextBox" TextChanged="TextBoxTextOfQuestion_TextChanged" Grid.Row="0" FontSize="16"/>
                    <Label Content="Variants" Margin="154,25,153,265" Grid.Row="1" FontFamily="Calibri" FontSize="16" HorizontalContentAlignment="Center"/>
                    <RadioButton Content="RadioButton" Margin="20,63,273,236" Grid.Row="1" FontSize="14"/>
                    <RadioButton Content="RadioButton" Margin="20,93,273,206" Grid.Row="1" FontSize="14"/>
                    <RadioButton Content="RadioButton" Margin="20,123,273,176" Grid.Row="1" FontSize="14"/>
                    <RadioButton Content="RadioButton" Margin="20,153,273,146" Grid.Row="1" FontSize="14"/>
                    <TextBox Height="18"  Margin="144,63,147,0" Grid.Row="1" MaxWidth = "130" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" FontSize="14" VerticalContentAlignment="Top"/>
                    <TextBox Height="18"  Margin="144,93,147,0" Grid.Row="1" MaxWidth ="130" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" FontSize="14" VerticalContentAlignment="Top"/>
                    <TextBox Height="18"  Margin="144,123,147,0" Grid.Row="1" MaxWidth= "130" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" FontSize="14" VerticalContentAlignment="Top"/>
                    <TextBox Height="18"  Margin="144,153,147,0" Grid.Row="1" MaxWidth= "130" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" FontSize="14" VerticalContentAlignment="Top"/>
                    <CheckBox Content="CheckBox" Margin="270,63,23,237" Grid.Row="1" Checked="CheckBox_Checked" Width="104"  FontSize="14"/>
                    <CheckBox Content="CheckBox" Margin="270,93,23,206" Grid.Row="1" Checked="CheckBox_Checked" Width="104"  FontSize="14" Height="18"/>
                    <CheckBox Content="CheckBox" Margin="270,123,23,176" Grid.Row="1" Checked="CheckBox_Checked" Width="104"  FontSize="14" Height="18"/>
                    <CheckBox Content="CheckBox" Margin="270,153,23,146" Grid.Row="1" Checked="CheckBox_Checked" Width="104"  FontSize="14" Height="18"/>
                    <Button Content="Button" Margin="20,195,250,97" Grid.Row="1" MaxWidth="200" MaxHeight="30" />
                    <Button Content="Button" Margin="252,195,20,97" Grid.Row="1" MaxWidth="200" MaxHeight="30"/>

                </Grid>
            </TabItem>
            <TabItem Header="FOR TEST" Height="22" VerticalAlignment="Top">
                <Grid Background="AntiqueWhite">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column ="1" Name="TextBlockForMessegeFromUser" />
                </Grid>
            </TabItem>
            <Grid Height="262" Width="489"/>
        </TabControl>
    </Grid>
</Window>
